@model QueJugadorApp.Models.Entity.Player

<h2>Edit Player</h2>

@if (Model == null)
{
    <p>There is no player with this ID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label>Player ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Player Name</label>
            <input type="text" class="form-control" asp-for="PlayerName" />
            <span asp-validation-for="PlayerName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Player Age</label>
            <input type="text" class="form-control" asp-for="Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Player Address</label>
            <input type="text" class="form-control" asp-for="PlayerAddress" />
            <span asp-validation-for="PlayerAddress" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Player Mail</label>
            <input type="email" class="form-control" asp-for="PlayerMail" />
            <span asp-validation-for="PlayerMail" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Phone Number</label>
            <input type="text" class="form-control" asp-for="PlayerPhone" />
            <span asp-validation-for="PlayerPhone" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Player Position</label>
            <input type="text" class="form-control" asp-for="PlayerPosition" />
        </div>
        <div class="mt-3">
            <label>Player Group</label>
            <input type="text" class="form-control" asp-for="PlayerGroup" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete" asp-controller="MyPlayers" onclick="return confirm('Are you sure ?')">Delete</button>
            <button type="submit" class="btn btn-primary ms-3" onclick="window.location.href='@Url.Action("List", "MyPlayers")'">Cancel</button>
        </div>
    </form>
}
