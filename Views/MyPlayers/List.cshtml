@{
}
@model List<QueJugadorApp.Models.Entity.Player>

<h1>Players List</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Email ID</th>
            <th>Phone Number</th>
            <th>Position</th>
            <th>Squad</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var Player in Model)
        {
            <tr>
                <td>@Player.Id</td>
                <td>@Player.PlayerName</td>
                <td>@Player.Age</td>
                <td>@Player.PlayerAddress</td>
                <td>@Player.PlayerMail</td>
                <td>@Player.PlayerPhone</td>
                <td>@Player.PlayerPosition</td>
                <td>@Player.PlayerGroup</td>
                <td>
                <a>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>